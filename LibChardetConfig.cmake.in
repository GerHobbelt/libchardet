set(LIBCHARDET_VERSION @SONAME_VERSION@)
set(LIBCHARDET_VERSION_MAJOR @SONAME_MAJOR@)
set(LIBCHARDET_VERSION_MINOR @SONAME_MINOR@)
set(LIBCHARDET_VERSION_REVISION @SONAME_REVISION@)

# Setup basic compiler flags
set(LIBCHARDET_PREFIX "@prefix@")
set(LIBCHARDET_INCLUDE_DIR "@prefix@/include" CACHE STRING "Directory where libchardet headers are installed")
set(LIBCHARDET_LIBRARY "chardet" CACHE STRING "Libarary name of libchardet")